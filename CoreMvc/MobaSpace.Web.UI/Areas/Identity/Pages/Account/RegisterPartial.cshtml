@{
}
@model RegisterModel
    <div class="row">
        <div class="container col-md-6">

            <div class="form-group">
                <label asp-for="Input.UserName"></label> *
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Input.Email"> Email (login de connexion) </label> *
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            @if (ViewBag.NeedPwd)
            {
                <div class="form-group">
                    <label asp-for="Input.Password"></label> *
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label> *
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            }
            <div class="form-group">
                <label asp-for="Input.CanalNotif"></label>
                <input asp-for="Input.CanalNotif"class="form-control" />
                <span asp-validation-for="Input.CanalNotif" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.AppelPhoneNumber"> Appel (débutant par 0 ou 33)</label>
                <input asp-for="Input.AppelPhoneNumber" placeholder="Ex : 0611223344" class="form-control" />
                <span asp-validation-for="Input.AppelPhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Linked2NetSOINS"></label>
                <input asp-for="Input.Linked2NetSOINS" class="form-control" />
                <span asp-validation-for="Input.Linked2NetSOINS" class="text-danger"></span>
            </div>
        </div>
        <div class="container col-md-6">
            <h4>Roles</h4>
            <hr />
            @for (int i = 0; i < Model.UserRoles.Count ; i++)
            {

                <div class="row">
                    <div class="col-md-auto">
                        <input asp-for="Input.UserRoles[i].Selectionne" />
                    </div>
                    <div class="col-md-auto">
                        <input asp-for="Input.UserRoles[i].Nom" class="form-control" value="@Model.UserRoles[i].Nom" hidden />
                        <label asp-for="Input.UserRoles[i].Nom">@Model.UserRoles[i].Nom</label>
                    </div>
                </div>
            }
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
