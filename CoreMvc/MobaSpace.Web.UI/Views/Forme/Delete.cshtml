@using MobaSpace.Core.Data.Models; 
@model IEnumerable<int>

@{ 
    ViewData["Title"] = "Réinitialisé une chambre";
}

<div class="container my-4">
    <h1><center>Réinitialiser les données d'une chambre</center></h1>
    <div class="my-5">
        <form asp-action="Delete" method="Post">
            <div class="row justify-content-md-center">
                <div class="form-group">
                    <center><label> Numéro de Chambre</label></center>
                    <select name="Numch" class="form-control">
                        <option value="">Choisir une Chambre</option>
                        @foreach (int num in Model)
                        {
                             <option value="@num">Chambre N° @num</option>
                        }
                    </select>
                    <span class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-md-center">

                <a class="btn btn-outline-secondary mr-4" asp-action="Index">Retour</a>
                <input type="submit" value="Supprimer" class="btn btn-outline-danger ml-1" />

            </div>
        </form>
    </div>
</div>

